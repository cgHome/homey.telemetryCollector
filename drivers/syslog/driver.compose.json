{
  "name": {
    "en": "Syslog Adapter"
  },
  "class": "service",
  "capabilities": [],
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      },
      "options": {
        "singular": true
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "settings": [
    {
      "id": "endpoint",
      "type": "text",
      "label": {
        "en": "Endpoint"
      },
      "value": "",
      "placeholder": "192.168.1.100",
      "hint": {
        "en": "The IP address of the service."
      }
    },
    {
      "id": "port",
      "type": "number",
      "label": {
        "en": "Port"
      },
      "min": 1,
      "max": 65536,
      "step": 1,
      "value": 514,
      "hint": {
        "en": "The Port number of the service."
      }
    },
    {
      "id": "transport",
      "type": "dropdown",
      "label": {
        "en": "Transport mode"
      },
      "value": "tcp",
      "placeholder": "",
      "values": [
        {
          "id": "tcp",
          "label": {
            "en": "tcp"
          }
        },
        {
          "id": "udp",
          "label": {
            "en": "udp"
          }
        }
      ]
    },
    {
      "id": "useRfc3164",
      "type": "checkbox",
      "label": {
        "en": "Use RFC-3164 (Obsolete)"
      },
      "value": false
    }
  ]
}